{
  "name": "jameswalsh.dev",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=v18.17.1"
  },
  "type": "module",
  "packageManager": "pnpm@9.10.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "scripts": {
    "dev": "next dev --port=3001",
    "dev:force": "rm -rf .next && pnpm dev",
    "db:migrate": "echo 'no migrations yet'",
    "build": "next build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint",
    "lint:fix": "pnpm lint -- --fix",
    "precommit": "pnpm spell && pnpm lint && pnpm format",
    "prepush": "pnpm typecheck && vitest --run",
    "prepare": "husky install",
    "preview": "pnpm build && pnpm start",
    "start": "next start",
    "spell": "cspell",
    "test:unit": "vitest",
    "test:unit:ci": "vitest --run --coverage",
    "test:e2e:open": "playwright test --headed",
    "test:e2e:run": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --pretty"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "front-matter": "^4.0.2",
    "geist": "1.3.1",
    "lucide-react": "^0.456.0",
    "next": "14.2.11",
    "next-mdx-remote": "^4.4.1",
    "next-themes": "0.3.0",
    "posthog-js": "^1.180.1",
    "posthog-node": "^4.2.1",
    "react": "18.3.1",
    "react-dom": "18.2.0",
    "rss": "^1.2.2",
    "sharp": "0.33.5",
    "shiki": "^0.14.7",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.7.5",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.2.25",
    "@types/rss": "^0.0.32",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-istanbul": "2.1.3",
    "autoprefixer": "^10.4.20",
    "commitlint": "19.6.0",
    "cspell": "8.15.1",
    "eslint": "8.57.1",
    "eslint-config-next": "14.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "git-cz": "4.9.0",
    "happy-dom": "^15.10.2",
    "husky": "^8.0.3",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "rehype": "^13.0.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.10.2",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.7.2",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.3"
  }
}
